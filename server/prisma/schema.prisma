generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id     Int      @id @default(autoincrement())
  name        String
  role        String
  email       String   @unique
  password    String
  createdAt   DateTime @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime @updatedAt @db.Timestamptz(6)
  tickets     Ticket[] 
  vans        Van[]    
}

model Ticket {
  ticket_id               Int      @id @default(autoincrement())
  passenger_name          String
  passenger_classification String
  passenger_address       String
  date                    DateTime  @default(now())
  phone_number            String
  destination             String
  seat_number             Int
  fare                    Float
  createdAt               DateTime @default(now()) @db.Timestamptz(6)
  updatedAt               DateTime @updatedAt @db.Timestamptz(6)
  van                     Van      @relation(fields: [van_id], references: [van_id])
  van_id                  Int
  user                    User     @relation(fields: [user_id], references: [user_id])
  user_id                 Int
}

model Van {
  van_id           Int      @id @default(autoincrement())
  model            String
  plate_no         String
  capacity         Int
  createdAt        DateTime @default(now()) @db.Timestamptz(6)
  updatedAt        DateTime @updatedAt @db.Timestamptz(6)
  tickets          Ticket[] 
  user             User[]   
  trips            Trip[]   
}

model Trip {
  trip_id          Int      @id @default(autoincrement())
  van              Van      @relation(fields: [van_id], references: [van_id])
  van_id           Int
  standby_time     DateTime
  departure_time   DateTime
  destination      String
  driver_name      String
  createdAt        DateTime @default(now()) @db.Timestamptz(6)
  updatedAt        DateTime @updatedAt @db.Timestamptz(6)
}